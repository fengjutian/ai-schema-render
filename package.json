{
  "name": "schema-renderer-demo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:electron": "concurrently -k \"cross-env BROWSER=none pnpm dev\" \"wait-on http://localhost:5173 && electronmon .\"",
    "build:electron": "vite build && electron-builder",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.66.8",
    "monaco-editor": "0.55.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-monaco-editor": "^0.59.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.18",
    "vite": "^5.3.6",
    "wait-on": "^9.0.3",
    "electronmon": "^2.0.3"
  },
  "main": "main.js",
    "build": {
    "appId": "com.example.schema-renderer",
    "productName": "Schema Renderer",
    "files": ["dist/**/*", "main.js"],
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
